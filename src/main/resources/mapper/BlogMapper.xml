<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="icu.shishc.mapper.BlogMapper">
    <resultMap id="BaseResultMap" type="icu.shishc.entity.Blog">
        <result column="blog_id" property="blogId"/>
        <result column="username" property="username"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <!-- 对应枚举字段加上TypeHandler -->
        <result column="status" property="status" typeHandler="org.apache.ibatis.type.EnumOrdinalTypeHandler"/>
        <result column="read_num" property="readNum"/>
        <result column="like_num" property="likeNum"/>
        <result column="gmt_create" property="gmtCreate"/>
        <result column="gmt_modified" property="gmtModified"/>
    </resultMap>


    <insert id="insert">
        INSERT INTO blog(username, title, content, status, gmt_create, gmt_modified)
            VALUES ('${username}', '${title}', '${content}', ${status}, now(), now())
    </insert>

    <update id="update">
        UPDATE blog SET title = '${title}',
                        content = '${content}',
                        status = ${status},
                        gmt_modified = now()
        where blog_id = ${blog_id};
    </update>

    <delete id="delete">
        DELETE FROM blog WHERE blog_id = ${id};
    </delete>

    <!-- 注意ResultType 和 ResultMap -->
    <select id="getAllBlog" resultMap="BaseResultMap">
        SELECT * FROM blog
    </select>

    <select id="getBlogByTitle" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT * FROM blog WHERE title = '${title}'
    </select>

    <select id="getBlogByBID" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT * FROM blog WHERE blog_id = ${bid}
    </select>

    <select id="getBlogByStatus" resultMap="BaseResultMap" parameterType="icu.shishc.enumeration.BlogStatus">
        SELECT * FROM blog WHERE status = ${status}
    </select>

    <select id="getAllLike" resultType="java.lang.Integer" >
        SELECT SUM(like_num) FROM blog
    </select>

    <select id="getAllReadNum" resultType="java.lang.Integer" >
        SELECT SUM(read_num) FROM blog
    </select>

</mapper>
